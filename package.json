{
  "name": "solidity-conv",
  "version": "0.0.1",
  "description": "a type conversion utility library for Solidity",
  "files": [
    "build",
    "contracts"
  ],
  "scripts": {
    "build": "waffle waffle.json",
    "migrate": "./scripts/migrate.sh",
    "migrate:kovan": "truffle migrate --network=kovan & apply-registry",
    "test": "ts-mocha test/*",
    "lint:fix": "yarn lint:ts:fix && yarn lint:sol:fix",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:sol": "solium -d .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:ts": "tslint -c tslint.json test/**/*.ts",
    "coverage": "solidity-coverage"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "utility",
    "conversion"
  ],
  "author": "Alex Xiong - <alex@alexxiong.com>",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/expect": "1.20.4",
    "@types/mocha": "5.2.6",
    "@types/node": "11.13.0",
    "chai": "4.2.0",
    "dotenv": "7.0.0",
    "eth-gas-reporter": "0.2.0",
    "ethereum-waffle": "2.0.11",
    "ethers": "4.0.27",
    "ethlint": "1.2.3",
    "ganache-cli": "6.4.1",
    "prettier": "1.16.4",
    "solc": "0.5.6",
    "solidity-coverage": "0.5.11",
    "truffle": "5.0.27",
    "truffle-deploy-registry": "0.5.1",
    "truffle-hdwallet-provider": "1.0.5",
    "ts-mocha": "6.0.0",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3333"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexXiong97/solidity-conv.git"
  },
  "bugs": {
    "url": "https://github.com/AlexXiong97/solidity-conv/issues"
  },
  "homepage": "https://github.com/AlexXiong97/solidity-conv"
}
